extends layout

block content
      h1.font-bold.text-center.text-xl.m-4  Student List
      form.form-inline.m-4(action='/filter', method='POST')
        input.form-control.mr-sm-2(type='text', placeholder='Keyword', name='search')
        .relative
          select#basedOn.text-grey-darker.border.h-10.m-1.rounded(name='basedOn')
            option#basedOn(value='id_student') Id Student
            option#basedOn(value='name') Name
            option#basedOn(value='mail') Email
            option#basedOn(value='address') Address
        .relative
          select#order.border.text-grey-darker.h-10.m-1.rounded(name='order')
            option#order(value='asc') Ascending
            option#order(value='desc') Descending
        button.btn.btn-outline-success.m-2.my-sm-0.rounded(type='submit') Search
      table.table.mr-4.ml-4(border='1 px')
        thead.thead-dark.font-bold(align='left')
          tr
            td Student Id
            td Name
            td(scope='col') Gender
            td(scope='col') Date of Birth
            td(scope='col') Address
            td(scope='col') Mail
            td(scope='col') Date of Entry
            td
            td 
        tbody
          for student in data
            tr
              td= student.id_student
              td= student.name
              td= student.gender
              td= student.date_of_birth
              td= student.address
              td= student.mail
              td= student.date_of_entry
              td
                form(action='/students/'+student.id_student)
                  input.bg-teal.text-white.font.py-2.px-4.rounded(class='hover:bg-teal-dark', type='submit', value='Update')
              td
                form(action='/delete-student/'+student.id_student, method='POST')
                  input.bg-red-lighter.text-white.font.py-2.px-4.rounded(class='hover:bg-red-dark', type='submit', value='Delete', onClick="return confirm_delete()")
              
                  
